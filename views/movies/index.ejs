<h2 class="center">Movie Review</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% movies.forEach(movie => { %>
    <tr>
      <td>
        <a href="<%= `/movies/${movie._id}` %>">
          <%= movie.title %>
        </a>
      </td>
      <td>
        <%= movie.description %>
      </td>
      <td>
        <a href="<%=`movies/${movie._id}/edit`%>">
          Edit
        </a>
      </td>
      <td>
        <a href="<%= `movies/${movie._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this review?')" a>Delete</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>