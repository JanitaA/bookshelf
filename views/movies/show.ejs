<h1 class="center">Review Data for
    <%= movie.title %>
  </h1>
  
  <table class="table">
    <tr>
      <th>Title</th>
      <td>
        <%= movie.title %>
      </td>
    </tr>
    <tr>
      <th>Description</th>
      <td>
        <%= movie.description%>
      </td>
    </tr>
    <tr>
      <th>Rating</th>
      <td>
        <%= movie.rating%>
      </td>
    </tr>
  </table>
  
  
  <div>
    <a class="button" href="<%=`/movies/${movie._id}/edit`%>">
      Edit Review
    </a>
  </div>
  <div>
    <a class="button" href="<%= `/movies/${movie._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this review?')" a>Delete</a>
  </div>
  <div>
    <a class="button" href="/movies">View all reviews</a>
  </div>